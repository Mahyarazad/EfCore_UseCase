@page
@model EfCore.Presentation.Pages.Product.CreateModel
@{
}


<form method="post">
    <div class="form-group">

        <div class="col-6 mt-3">
            <label class="col-6"> Product Name </label>
            <input class="col-6" name="ProductName" id="name" type="text" />
        </div>
        <div class="col-6 mt-3">
            <label class="col-6"> Product Description </label>
            <input class="col-6" name="ProductDescription" id="description" type="text" />
        </div>
        <div class="col-6 mt-3">
            <label class="col-6"> Product Price </label>
            <input class="col-6" name="UnitPrice" id="price" type="number" />
        </div>
        <div class="col-6 mt-3">
            <label class="col-6"> Category Name </label>
            <select class="custom-select"
                    asp-for="@Model.SelectedCategory"
                    asp-items="@Model.CategoryList"
                    id="category"
                    name="CategoryId">
                <option selected="selected">
                    Change Category
                </option>
            </select>
            <div class="mt-3">
                <button type="submit" class="btn btn-success"> Save </button>
            </div>
        </div>
    </div>

</form>